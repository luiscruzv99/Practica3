<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".deportistaActivities.FlexionesActivity">

    <Chronometer
        android:id="@+id/chronoFlex"
        android:layout_width="92dp"
        android:layout_height="45dp"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.696" />

    <Button
        android:id="@+id/empiezaFlex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="empieza"
        android:text="Empezar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/chronoFlex"
        app:layout_constraintStart_toStartOf="@+id/chronoFlex"
        app:layout_constraintTop_toBottomOf="@+id/chronoFlex"
        app:layout_constraintVertical_bias="0.498" />

    <TextView
        android:id="@+id/aFlex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flexiona!"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/chronoFlex"
        app:layout_constraintEnd_toEndOf="@+id/chronoFlex"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="@+id/chronoFlex"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.248" />

    <TextView
        android:id="@+id/flexiones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/chronoFlex"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aFlex"
        app:layout_constraintVertical_bias="0.957" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="162dp"
        android:layout_height="210dp"
        app:layout_constraintBottom_toTopOf="@+id/flexiones"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aFlex"
        app:srcCompat="@drawable/pushups" />
</androidx.constraintlayout.widget.ConstraintLayout>